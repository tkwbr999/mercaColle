{
  "name": "mercacolle-extension",
  "version": "0.0.0",
  "description": "mercaColle（メルカコレ）- Mercariの明細を取得するChrome拡張機能",
  "license": "MIT",
  "author": "mercaColle",
  "keywords": ["chrome-extension", "mercari", "transaction", "csv", "freee"],
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint popup/ src/ tests/",
    "lint:fix": "eslint popup/ src/ tests/ --fix",
    "format": "prettier --write popup/ src/ tests/",
    "format:check": "prettier --check popup/ src/ tests/",
    "build": "npm run lint && npm run format",
    "build:test": "npm run lint && npm run format && npm run test:unit",
    "release": "npm run build && echo 'Ready for release!'"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@jest/globals": "^29.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "prettier": "^3.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "popup/**/*.js",
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "webextensions": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "globals": {
      "chrome": "readonly"
    }
  }
}
