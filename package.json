{
  "name": "mercacolle-workspace",
  "version": "1.0.0",
  "description": "mercaColle（メルカコレ）開発ワークスペース",
  "license": "MIT",
  "author": "mercaColle",
  "private": true,
  "type": "module",
  "workspaces": [
    "extension"
  ],
  "scripts": {
    "dev": "cd extension && npm run dev",
    "test": "cd extension && npm test",
    "test:unit": "cd extension && npm run test:unit",
    "test:e2e": "cd extension && npm run test:e2e",
    "lint": "cd extension && npm run lint",
    "lint:fix": "cd extension && npm run lint:fix",
    "format": "cd extension && npm run format",
    "format:check": "cd extension && npm run format:check",
    "build": "cd extension && npm run build",
    "build:test": "cd extension && npm run build:test",
    "build:dist": "node build-dist.js",
    "release": "cd extension && npm run release",
    "install:all": "npm install && cd extension && npm install"
  },
  "devDependencies": {
    "prettier": "^3.0.0"
  }
}